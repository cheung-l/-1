import java.util.Scanner;

public class DisplayTime {

	public static void main(String[] args) {
		Scanner input = new Scanner (System.in);
		System.out.print("Enter an integer for scends: ");
		int scends = input.nextInt();
		int min = scends / 60;
		int remainingScends = scends % 60;
		System.out.println(scends + "scends is " + min +" minutes and " + 
		remainingScends + " scends");
	}

}
